{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "goplsOptions": {
        "completeUnimported": true
      }
    },
    "python": {
      "command": "/Library/Frameworks/Python.framework/Versions/3.13/bin/pylsp",
      "filetypes": ["python"],
      "rootPatterns": [
        "pyproject.toml",
        "setup.py",
        "requirements.txt",
        ".git/"
      ]
    }
  }
}
